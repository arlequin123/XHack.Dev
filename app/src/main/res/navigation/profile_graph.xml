<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_graph"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.xhackdev.presenter.fragments.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_profileFragment_to_favourites_graph"
            app:destination="@id/favourites_graph" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.xhackdev.presenter.fragments.EditProfileFragment"
        android:label="EditProfileFragment" >
        <action
            android:id="@+id/action_editProfileFragment_to_skillsFragment"
            app:destination="@id/skillsFragment" />
    </fragment>
    <include app:graph="@navigation/favourites_graph" />
    <fragment
        android:id="@+id/skillsFragment"
        android:name="com.example.xhackdev.presenter.fragments.SkillsFragment"
        android:label="SkillsFragment" >
        <argument
            android:name="selectedIds"
            app:argType="integer[]" />
    </fragment>
</navigation>