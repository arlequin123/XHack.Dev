<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messenger_graph"
    app:startDestination="@id/messengerFragment">

    <fragment
        android:id="@+id/messengerFragment"
        android:name="com.example.xhackdev.presenter.fragments.MessengerFragment"
        android:label="MessengerFragment" >
        <action
            android:id="@+id/action_messengerFragment_to_chatDetailsFragment"
            app:destination="@id/chatDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatDetailsFragment"
        android:name="com.example.xhackdev.presenter.fragments.ChatDetailsFragment"
        android:label="ChatDetailsFragment" >
        <argument
            android:name="chatId"
            app:argType="integer" />
    </fragment>
</navigation>